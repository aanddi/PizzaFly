   "scripts": {
      "dev": "nodemon dist/index.js",
      "build:watch": "tsc -w",
      "build": "rimraf dist && tsc",
      "ts.check": "tsc --project tsconfig.json",
      "add-build": "git add dist",
      "format": "prettier --write \"./**/*.{js,ts,json}\""
