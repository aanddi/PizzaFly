   "dependencies": {
      "cors": "^2.8.5",
      "express": "^4.19.2",
      "mysql": "^2.18.1",
      "pg": "^8.11.5",
      "prettier": "^3.2.5",
      "reflect-metadata": "^0.2.2",
      "typeorm": "^0.3.20"
   },
   "devDependencies": {
      "@types/cors": "^2.8.17",
      "@types/express": "^4.17.21",
      "@types/node": "^20.12.3",
      "dotenv": "^16.4.5",
      "nodemon": "^3.1.0",
      "pre-commit": "^1.2.2",
      "rimraf": "^5.0.5",
      "ts-node": "^10.9.2",
      "typescript": "^5.4.3"
   }
